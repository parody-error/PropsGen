<Window
    x:Class="PropsGen.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:PropsGen"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:views="clr-namespace:PropsGen.Views"
    xmlns:vm="clr-namespace:PropsGen.ViewModels"
    Title="Props Generator"
    Width="800"
    Height="450"
    d:DataContext="{d:DesignInstance Type=vm:MainViewModel}"
    WindowStartupLocation="CenterScreen"
    mc:Ignorable="d">
    <Grid>
        <TabControl Margin="0,0,0,10" TabStripPlacement="Top">
            <TabItem Name="Connection" Header="Connection">
                <views:ConnectionControl DataContext="{Binding ConnectionViewModel}" />
            </TabItem>
            <TabItem Name="Props" Header="Props">
                <views:PropsControl DataContext="{Binding PropsViewModel}" />
            </TabItem>
        </TabControl>
    </Grid>
</Window>
